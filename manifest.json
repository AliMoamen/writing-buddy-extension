{
  "manifest_version": 3,
  "name": "Writing Extension",
  "version": "1.0",
  "description": "Adds Extra Functionalities to Help Evaluate Writing.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.minerva.edu/grader_training/decision/*"],
  "content_scripts": [
    {
      "matches": [
        "https://www.minerva.edu/grader_training/decision/*",
        "https://www.minerva.edu/admissions/evaluate/*",
        "https://www.minerva.edu/evaluate/*"
      ],
      "js": ["content.js"]
    }
  ]
}
